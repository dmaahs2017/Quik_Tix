<html lang="en-us">
	<head>
		<%- include('header'); %>
	</head>
	<body>
		<div class="jumbotron" style="background-color: grey">
			<div class="text-center">
				<h2 class="anime">Cart</h2>
			</div>
		</div>
		<% var events = JSON.parse(Settings.Events) %>
		<div class="container offset-sm-1 col-sm-10">
			<div class="table-responsive table-bordered">
				<table class="table table-striped table-sm" id="myTable">
					<thead class="thead-dark">
						<tr>
							<th width="34%" id="sportName">Name</th>
							<th width="8%" id="sportDate">Date</th>
							<th width="8%" id="sportTime">Time</th>
							<th width="12%" id="sportVenueName">Venue Name</th>
							<th width="8%" id="sportPriceMin">Price Min</th>
							<th width="8%" id="sportPriceMax">Price Max</th>
							<th width="12%"></th>
						</tr>
					</thead>
					<tbody>
						<form class="form" action="/checkout" method="post" id="checkoutForm">
						<% for(var i=0; i < events.length; i++) { %>
							<tr id="<%= events[i][0]._id %>">
								<input type="text" name="ticketID" value="<%= events[i][0]._id %>" hidden>
								<td><%= events[i][0].Name %></td>
								<td><%= events[i][0].Date %></td>
								<td><%= events[i][0].Time %></td>
								<td><%= events[i][0].Venue_Name %></td>
								<td><%= events[i][0].Price_Min %></td>
								<td><%= events[i][0].Price_Max %></td>
								<td style="overflow:hidden">
									<div class="row">
										&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<button  id="<%= events[i][0]._id %>" type="button" class="btn btn-sm btn-danger" onclick="removeFromCart(this.id)"name="button">Delete</button>&nbsp&nbsp&nbsp<select class="form-control" style="width:25%" id="sel1" name="qty"><option>1</option><option>2</option>
										<option>3</option><option>4</option><option>5</option><option>6</option><option>7</option><option>8</option><option>9</option><option>10</option>
										<option>11</option><option>12</option><option>13</option><option>14</option><option>15</option><option>16</option><option>17</option><option>18</option>
										<option>19</option><option>20</option></select>&nbsp&nbsp&nbsp

									</div>
								</td>
							</tr>
						<% } %>
					</tbody>
				</table>
				<% if ( events.length > 0) { %>
					<button type="submit" class="btn btn-success" name="button">Checkout</button>
				<% } %>
				</form>
			</div>
		</div>
		<form class="form" action="/removeTicket" method="post" id="removeFromCart" hidden>
			<input type="text" name="ticketID" id="cartticketID" value="_blank">
		</form>


		<script type="text/javascript">
			function removeFromCart(id) {
				document.getElementById('cartticketID').value = id;
				document.getElementById('removeFromCart').submit();
			}
			// function checkout() {
			// 	window.location ""
			// }
		</script>
	</body>
</html>
